{
  "scripts": {
    "start": "node ./build/index.js",
    "commit": "cz",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:prettier": "prettier --write '{src,__{tests,mocks}__}/**/*.{ts,json}'",
    "fix:eslint": "eslint src --ext .ts,.tsx --fix",
    "lint": "run-p lint:prettier lint:eslint",
    "lint:prettier": "prettier --check '{src,__{tests,mocks}__}/**/*.{ts,json}'",
    "lint:eslint": "eslint src --ext .ts,.tsx",
    "build": "tsc",
    "watch": "tsc-watch --onSuccess \"npm start\"",
    "test": "jest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@zeit/ncc": "^0.22.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-jest": "^27.2.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "npm run fix"
  }
}
